<div class="container m-3">

<p style="color: green"><%= notice %></p>

<h1>Monuments</h1>

<div data-controller='insert-in-list'>
  <div id="monuments" data-insert-in-list-target='items'>
    <% @monuments.each do |monument| %>
      <%= render monument %>
      <p>
        <%= link_to "Show this monument", monument %>
      </p>
    <% end %>
  </div>
  <%#= link_to "New monument", new_monument_path %>
  <div data-controller='toggle'>
    <button class="btn btn-primary mt-3" data-action='click->toggle#fire'>
      Add a new monument
    </button>
    <div class='mt-3 d-none' data-toggle-target='toggleableElement'>
      <%= render 'form', monument: @monument %>
    </div>
  </div>
</div>

</div>
